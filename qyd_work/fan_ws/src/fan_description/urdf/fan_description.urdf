<?xml version="1.0" encoding="UTF-8" ?>
<robot name="fan">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 .8 1"/>
            </material>
        </visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <collision>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="1000000" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>
    <link name="wall">
        <visual>
            <geometry>
                <box size="10 1 10"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 .8 1"/>
            </material>
        </visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <collision>
            <geometry>
                <box size="10 1 10"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="20" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>
    <link name="joint">
        <visual>
            <geometry>
                <box size="1 1 1"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <collision>
            <geometry>
                <box size="1 1 1"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="0.1" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>
    <link name="pole">
        <visual>
            <geometry>
                <box size="1 1 8"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 .8 1"/>
            </material>
        </visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <collision>
            <geometry>
                <box size="1 1 8"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="1" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
    </link>

    <joint name="wall2base_link" type="fixed">
        <parent link="base_link"/>
        <child link="wall"/>
        <origin xyz="0 0 5" rpy="0 0 0"/>
    </joint>
    <joint name="joint2wall" type="fixed">
        <parent link="wall"/>
        <child link="joint"/>
        <origin xyz="0 -1 0" rpy="0 0 0"/>
    </joint>
    <joint name="pole2joint" type="continuous">
        <parent link="joint"/>
        <child link="pole"/>
        <origin xyz="0 -1 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <transmission name="pole_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="pole_motors">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1.0</mechanicalReduction>
        </actuator>
        <joint name="pole2joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
    </transmission>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/</robotNamespace>
        </plugin>
    </gazebo>
    <gazebo>
        <plugin name="fixed_plugin" filename="libgazebo_ros_link_attacher.so">
            <robotNamespace>/</robotNamespace>
            <fixed>true</fixed>  <!-- 设置为true可以固定模型 -->
        </plugin>
    </gazebo>

</robot>
